numbers = []

num_elements = int(input("Enter the number of elements you want to store: "))

for i in range(num_elements):
    number = int(input(f"Enter number {i + 1}: "))
    numbers.append(number)

print("The elements of the array are:")
print(numbers)

insert_number = int(input("Enter the number you want to insert: "))
insert_position = int(input("Enter the position where you want to insert the number (1-based index): "))

if 1 <= insert_position <= len(numbers) + 1:
    numbers.insert(insert_position - 1, insert_number)
else:
    print("Invalid position for insertion.")

print("The array after insertion is:")
print(numbers)

delete_position = int(input("Enter the position of the number you want to delete (1-based index): "))

if 1 <= delete_position <= len(numbers):
    deleted_number = numbers.pop(delete_position - 1)
    print(f"The number {deleted_number} at position {delete_position} has been deleted.")
else:
    print("Invalid position for deletion.")
    
print("The array after deletion is:")
print(numbers)
